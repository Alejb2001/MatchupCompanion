@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@using MatchupCompanion.Client.Services.Auth
@inject IAuthenticationService AuthService

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 d-flex justify-content-between align-items-center">
            <div>
                <a href="/" class="text-decoration-none"><strong>Matchup Companion</strong></a>
            </div>
            <AuthorizeView>
                <Authorized>
                    <div class="d-flex align-items-center gap-3">
                        <span class="text-muted">Hola, @context.User.Identity?.Name</span>
                        <button class="btn btn-sm btn-outline-danger" @onclick="Logout">
                            Cerrar Sesión
                        </button>
                    </div>
                </Authorized>
                <NotAuthorized>
                    <div class="d-flex gap-2">
                        <a href="/login" class="btn btn-sm btn-outline-primary">Iniciar Sesión</a>
                        <a href="/register" class="btn btn-sm btn-primary">Registrarse</a>
                    </div>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private async Task Logout()
    {
        await AuthService.LogoutAsync();
    }
}
