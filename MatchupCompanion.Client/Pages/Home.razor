@page "/"
@using MatchupCompanion.Shared.Models
@using MatchupCompanion.Client.Services
@inject IChampionService ChampionService
@inject IFavoriteChampionsService FavoriteChampionsService
@inject NavigationManager Navigation

<PageTitle>Home - Matchup Companion</PageTitle>

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-12">
            <div class="card border-0 shadow-lg mb-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                <div class="card-body p-5">
                    <h1 class="display-4 fw-bold mb-3">Bienvenido a Matchup Companion</h1>
                    <p class="lead mb-4">Tu guía definitiva para dominar los matchups de League of Legends</p>
                    <hr class="my-4 border-white opacity-25" />
                    <p class="mb-0">
                        Matchup Companion es una aplicación que te ayuda a entender y ganar tus partidas de League of Legends
                        proporcionándote información detallada sobre matchups específicos entre campeones.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card mb-4 border-0 shadow-sm h-100" style="transition: transform 0.2s;">
                <div class="card-body d-flex flex-column">
                    <div class="mb-3">
                        <i class="bi bi-search h1 text-primary"></i>
                    </div>
                    <h5 class="card-title fw-bold">Buscar Matchups</h5>
                    <p class="card-text flex-grow-1">
                        Encuentra información específica sobre cómo jugar un matchup seleccionando tu campeón,
                        el campeón enemigo y el rol.
                    </p>
                    <a href="/matchup-search" class="btn btn-primary rounded-pill">
                        <i class="bi bi-search me-2"></i>Buscar Matchup
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4 border-0 shadow-sm h-100" style="transition: transform 0.2s;">
                <div class="card-body d-flex flex-column">
                    <div class="mb-3">
                        <i class="bi bi-list-ul h1 text-success"></i>
                    </div>
                    <h5 class="card-title fw-bold">Ver Todos los Matchups</h5>
                    <p class="card-text flex-grow-1">
                        Explora todos los matchups disponibles en nuestra base de datos y descubre nuevas estrategias.
                    </p>
                    <a href="/matchups" class="btn btn-success rounded-pill">
                        <i class="bi bi-list-ul me-2"></i>Ver Matchups
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4 border-0 shadow-sm h-100" style="transition: transform 0.2s;">
                <div class="card-body d-flex flex-column">
                    <div class="mb-3">
                        <i class="bi bi-plus-circle h1 text-info"></i>
                    </div>
                    <h5 class="card-title fw-bold">Crear Matchup</h5>
                    <p class="card-text flex-grow-1">
                        Comparte tu conocimiento creando un nuevo matchup con consejos y estrategias para la comunidad.
                    </p>
                    <a href="/create-matchup" class="btn btn-info rounded-pill text-white">
                        <i class="bi bi-plus-circle me-2"></i>Crear Matchup
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Sección de Campeones Favoritos -->
    @if (favoriteChampions.Any())
    {
        <div class="row mt-5">
            <div class="col-lg-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <h5 class="card-title mb-1 fw-bold">
                                    <i class="bi bi-star-fill text-warning me-2"></i>Mis Campeones Favoritos
                                </h5>
                                <p class="text-muted mb-0 small">Haz clic en un campeón para ver sus matchups</p>
                            </div>
                            <button class="btn btn-sm btn-outline-primary rounded-pill" @onclick="ToggleManageFavorites">
                                <i class="bi bi-gear me-2"></i>@(showManageFavorites ? "Ocultar Gestión" : "Gestionar Favoritos")
                            </button>
                        </div>

                        <div class="row">
                            @foreach (var champion in favoriteChampions)
                            {
                                <div class="col-6 col-md-4 col-lg-2 mb-3">
                                    <div class="card h-100 champion-card" style="cursor: pointer;" @onclick="() => NavigateToChampionMatchups(champion.Id)">
                                        <div class="position-relative">
                                            @if (!string.IsNullOrEmpty(champion.ImageUrl))
                                            {
                                                <img src="@champion.ImageUrl" class="card-img-top" alt="@champion.Name" />
                                            }
                                            else
                                            {
                                                <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 120px;">
                                                    <span>@champion.Name.Substring(0, 1)</span>
                                                </div>
                                            }
                                            <button class="btn btn-sm btn-danger position-absolute top-0 end-0 m-1"
                                                    @onclick:stopPropagation="true"
                                                    @onclick="() => RemoveFromFavorites(champion.Id)">
                                                <i class="bi bi-x"></i>
                                            </button>
                                        </div>
                                        <div class="card-body p-2 text-center">
                                            <small class="fw-bold">@champion.Name</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Sección para Gestionar Favoritos -->
    @if (showManageFavorites || !favoriteChampions.Any())
    {
        <div class="row mt-5">
            <div class="col-lg-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">
                        <h5 class="card-title fw-bold">
                            <i class="bi bi-plus-circle me-2"></i>Agregar Campeones Favoritos
                        </h5>
                        <p class="text-muted">Selecciona tus campeones favoritos para acceso rápido</p>

                        @if (isLoadingAllChampions)
                        {
                            <div class="text-center">
                                <div class="spinner-border" role="status">
                                    <span class="visually-hidden">Cargando...</span>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="mb-3">
                                <input type="text" class="form-control" placeholder="Buscar campeón..."
                                       @bind="championSearchText" @bind:event="oninput" />
                            </div>

                            <div class="row" style="max-height: 400px; overflow-y: auto;">
                                @foreach (var champion in filteredAvailableChampions)
                                {
                                    <div class="col-6 col-md-3 col-lg-2 mb-3">
                                        <div class="card h-100 champion-card @(IsFavorite(champion.Id) ? "border-primary" : "")"
                                             style="cursor: pointer;"
                                             @onclick="() => ToggleFavorite(champion.Id)">
                                            <div class="position-relative">
                                                @if (!string.IsNullOrEmpty(champion.ImageUrl))
                                                {
                                                    <img src="@champion.ImageUrl" class="card-img-top" alt="@champion.Name" />
                                                }
                                                else
                                                {
                                                    <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 80px;">
                                                        <span>@champion.Name.Substring(0, 1)</span>
                                                    </div>
                                                }
                                                @if (IsFavorite(champion.Id))
                                                {
                                                    <span class="position-absolute top-0 end-0 m-1">
                                                        <i class="bi bi-star-fill text-warning"></i>
                                                    </span>
                                                }
                                            </div>
                                            <div class="card-body p-2 text-center">
                                                <small class="fw-bold">@champion.Name</small>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row mt-5">
        <div class="col-lg-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <h5 class="card-title fw-bold mb-4">
                        <i class="bi bi-award me-2 text-primary"></i>Características
                    </h5>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Base de datos completa de campeones de League of Legends</li>
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Matchups organizados por roles (Top, Jungle, Mid, ADC, Support)</li>
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Consejos específicos por fase del juego (Early, Mid, Late)</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Recomendaciones de items, runas y habilidades</li>
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Dificultad del matchup claramente indicada</li>
                                <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Contribuciones de la comunidad</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .champion-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border-radius: 12px;
        overflow: hidden;
        border: 2px solid transparent;
    }

    .champion-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 8px 16px rgba(0,0,0,0.2);
        border-color: #0d6efd;
    }

    .card {
        border-radius: 12px;
    }

    .card:hover {
        transform: translateY(-2px);
    }
</style>

@code {
    private List<ChampionDto> allChampions = new();
    private List<ChampionDto> favoriteChampions = new();
    private List<int> favoriteChampionIds = new();
    private bool isLoadingAllChampions = true;
    private bool showManageFavorites = false;
    private string championSearchText = string.Empty;

    private IEnumerable<ChampionDto> filteredAvailableChampions =>
        string.IsNullOrWhiteSpace(championSearchText)
            ? allChampions
            : allChampions.Where(c => c.Name.Contains(championSearchText, StringComparison.OrdinalIgnoreCase));

    protected override async Task OnInitializedAsync()
    {
        await LoadFavorites();
        await LoadAllChampions();
    }

    private async Task LoadFavorites()
    {
        favoriteChampionIds = await FavoriteChampionsService.GetFavoriteChampionIdsAsync();

        if (favoriteChampionIds.Any())
        {
            favoriteChampions = new List<ChampionDto>();
            foreach (var id in favoriteChampionIds)
            {
                var champion = await ChampionService.GetChampionByIdAsync(id);
                if (champion != null)
                {
                    favoriteChampions.Add(champion);
                }
            }
        }
    }

    private async Task LoadAllChampions()
    {
        isLoadingAllChampions = true;
        allChampions = await ChampionService.GetAllChampionsAsync();
        isLoadingAllChampions = false;
    }

    private bool IsFavorite(int championId)
    {
        return favoriteChampionIds.Contains(championId);
    }

    private async Task ToggleFavorite(int championId)
    {
        await FavoriteChampionsService.ToggleFavoriteAsync(championId);
        await LoadFavorites();
    }

    private async Task RemoveFromFavorites(int championId)
    {
        await FavoriteChampionsService.RemoveFavoriteAsync(championId);
        await LoadFavorites();
    }

    private void ToggleManageFavorites()
    {
        showManageFavorites = !showManageFavorites;
    }

    private void NavigateToChampionMatchups(int championId)
    {
        Navigation.NavigateTo($"/matchups?championId={championId}");
    }
}
