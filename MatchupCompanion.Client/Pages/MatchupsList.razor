@page "/matchups"
@using MatchupCompanion.Shared.Models
@using MatchupCompanion.Client.Services
@inject IMatchupService MatchupService
@inject IChampionService ChampionService
@inject NavigationManager Navigation

<PageTitle>Todos los Matchups</PageTitle>

<div class="container mt-4">
    @if (filterByChampion != null)
    {
        <div class="alert alert-primary border-0 shadow-sm d-flex justify-content-between align-items-center mb-4">
            <div>
                <h5 class="mb-1 fw-bold"><i class="bi bi-funnel me-2"></i>Matchups de @filterByChampion.Name</h5>
                <small>Mostrando todos los matchups donde juegas como @filterByChampion.Name</small>
            </div>
            <button class="btn btn-sm btn-outline-dark rounded-pill" @onclick="ClearChampionFilter">
                <i class="bi bi-x-circle me-2"></i>Ver Todos
            </button>
        </div>
    }

    <div class="mb-4">
        <h1 class="fw-bold">@(filterByChampion != null ? $"Matchups de {filterByChampion.Name}" : "Todos los Matchups")</h1>
        <p class="lead text-muted">Explora @(filterByChampion != null ? "los matchups de tu campeón favorito" : "todos los matchups disponibles")</p>
    </div>

    @if (isLoading)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
            <p class="mt-2">Cargando matchups...</p>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger border-0 shadow-sm" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>
            <strong>Error:</strong> @errorMessage
        </div>
    }
    else if (matchups.Count == 0)
    {
        <div class="alert alert-info border-0 shadow-sm" role="alert">
            <i class="bi bi-info-circle me-2"></i>
            No hay matchups disponibles. <a href="/create-matchup" class="alert-link fw-bold">Crea el primero</a>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body">
                <div class="row mb-3 align-items-center">
                    <div class="col-md-6">
                        <div class="input-group">
                            <span class="input-group-text border-0 bg-light">
                                <i class="bi bi-search"></i>
                            </span>
                            <input type="text" class="form-control border-0 bg-light" placeholder="Filtrar por nombre de campeón..."
                                   @bind="filterText" @bind:event="oninput" />
                        </div>
                    </div>
                    <div class="col-md-6 text-end">
                        <span class="badge bg-secondary rounded-pill px-3 py-2">
                            Mostrando @filteredMatchups.Count de @matchups.Count matchups
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="card border-0 shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="fw-bold">Tu Campeón</th>
                            <th class="text-center fw-bold">VS</th>
                            <th class="fw-bold">Campeón Enemigo</th>
                            <th class="fw-bold">Rol</th>
                            <th class="fw-bold">Dificultad</th>
                            <th class="fw-bold">Tips</th>
                            <th class="fw-bold">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var matchup in filteredMatchups)
                        {
                            <tr style="cursor: pointer;" @onclick="() => ViewMatchup(matchup.Id)">
                                <td>
                                    <strong class="text-primary">@matchup.PlayerChampion.Name</strong>
                                </td>
                                <td class="text-center text-muted">VS</td>
                                <td>
                                    <strong class="text-danger">@matchup.EnemyChampion.Name</strong>
                                </td>
                                <td>
                                    <span class="badge bg-secondary rounded-pill">@matchup.Role.Name</span>
                                </td>
                                <td>
                                    <span class="badge @GetDifficultyBadgeClass(matchup.Difficulty) rounded-pill">
                                        @GetDifficultyDisplayName(matchup.Difficulty)
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-info rounded-pill">@matchup.Tips.Count consejos</span>
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-primary rounded-pill" @onclick="() => ViewMatchup(matchup.Id)" @onclick:stopPropagation="true">
                                        <i class="bi bi-eye me-1"></i>Ver Detalles
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@code {
    private List<MatchupDto> matchups = new();
    private List<MatchupDto> filteredMatchups = new();
    private bool isLoading = true;
    private string? errorMessage;
    private ChampionDto? filterByChampion = null;
    private int? championIdFilter = null;

    protected override async Task OnInitializedAsync()
    {
        // Extraer parámetro championId de la URL
        var uri = new Uri(Navigation.Uri);
        var query = uri.Query;

        if (!string.IsNullOrEmpty(query))
        {
            // Parsear query string manualmente
            var queryParams = query.TrimStart('?').Split('&');
            foreach (var param in queryParams)
            {
                var keyValue = param.Split('=');
                if (keyValue.Length == 2 && keyValue[0] == "championId")
                {
                    if (int.TryParse(keyValue[1], out var championId))
                    {
                        championIdFilter = championId;
                        filterByChampion = await ChampionService.GetChampionByIdAsync(championId);
                        break;
                    }
                }
            }
        }

        await LoadMatchups();
    }

    private async Task LoadMatchups()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            matchups = await MatchupService.GetAllMatchupsAsync();

            // Aplicar filtro por campeón si está presente
            if (championIdFilter.HasValue)
            {
                filteredMatchups = matchups
                    .Where(m => m.PlayerChampion.Id == championIdFilter.Value)
                    .ToList();
            }
            else
            {
                filteredMatchups = matchups;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"No se pudieron cargar los matchups: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void FilterMatchups()
    {
        var baseMatchups = championIdFilter.HasValue
            ? matchups.Where(m => m.PlayerChampion.Id == championIdFilter.Value).ToList()
            : matchups;

        if (string.IsNullOrWhiteSpace(filterText))
        {
            filteredMatchups = baseMatchups;
        }
        else
        {
            var filter = filterText.ToLower();
            filteredMatchups = baseMatchups.Where(m =>
                m.PlayerChampion.Name.ToLower().Contains(filter) ||
                m.EnemyChampion.Name.ToLower().Contains(filter) ||
                m.Role.Name.ToLower().Contains(filter)
            ).ToList();
        }
    }

    private void ClearChampionFilter()
    {
        Navigation.NavigateTo("/matchups");
    }

    private string filterText
    {
        get => _filterText;
        set
        {
            _filterText = value;
            FilterMatchups();
        }
    }
    private string _filterText = string.Empty;

    private string GetDifficultyBadgeClass(string difficulty)
    {
        return difficulty switch
        {
            "Easy" => "bg-success",
            "Medium" => "bg-warning",
            "Hard" => "bg-danger",
            "Extreme" => "bg-dark",
            _ => "bg-secondary"
        };
    }

    private string GetDifficultyDisplayName(string difficulty) => difficulty switch
    {
        "Easy" => "Fácil",
        "Medium" => "Medio",
        "Hard" => "Difícil",
        "Extreme" => "Extremo",
        _ => difficulty
    };

    private void ViewMatchup(int id)
    {
        Navigation.NavigateTo($"/matchup/{id}");
    }
}
